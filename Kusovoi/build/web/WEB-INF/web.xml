<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>
		MyPackage.EncodingFilter
	</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <display-name>HibernateWebApp</display-name>
    <servlet>
        <display-name>User</display-name>
        <servlet-name>User</servlet-name>
        <servlet-class>MyPackage.UserControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <display-name>Sucess</display-name>
        <servlet-name>Sucess</servlet-name>
        <servlet-class>MyPackage.Sucess</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Administration</servlet-name>
        <servlet-class>MyPackage.Administration</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserPanel</servlet-name>
        <servlet-class>MyPackage.UserPanel</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>User</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Sucess</servlet-name>
        <url-pattern>/Sucess</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Administration</servlet-name>
        <url-pattern>/Administration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserPanel</servlet-name>
        <url-pattern>/UserPanel</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>Register.jsp</welcome-file>
    </welcome-file-list>
</web-app>
